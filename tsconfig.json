{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "Node",
    "target": "ES2015",
    "lib": ["ES2015"],
    "outDir": "build/",
    "rootDir": "./src",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["build", "node_modules", "sample", "**/*.spec.ts", "test/**"]
}
